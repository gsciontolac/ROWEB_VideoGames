@model MvcVideoGames.Models.VideoGameReviews

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>VideoGames</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGame.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoGame.Price)$
        </dd>
    </dl>
</div>
<div>
    
    <a asp-action="Index">Back to List</a>
</div>


<div>
    <h4>Reviews</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Date Review
            </th>
            <th>
                Review
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reviews)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewVideoGame)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<div>
    <h4>Add review</h4>
<div class="row">

    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Review.UserName" class="control-label"></label>
                <input asp-for="Review.UserName" class="form-control" />
                <span asp-validation-for="Review.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.ReviewVideoGame" class="control-label"></label>
                <input asp-for="Review.ReviewVideoGame" class="form-control" />
                <span asp-validation-for="Review.ReviewVideoGame" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Review.VideoGamesId" class="control-label"></label>
                <select asp-for="Review.VideoGamesId" class="form-control" asp-items="ViewBag.VideoGamesId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>